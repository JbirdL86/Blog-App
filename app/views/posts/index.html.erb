<div class='posts-container'>
  <%= render 'users/user', user: @user %>
  <% @posts.each do |post| %>
    <%=link_to user_post_path(@user.id, post.id) do%> 
      <%= render 'post_preview', post: post %>
      <%= render partial: 'post_comments', locals: { comments: post.recent_comments } %>
    <% end %>
  <% end %>
  <button class='pagination'>Pagination</button>
</div>